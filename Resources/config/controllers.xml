<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_theme.controller.theme.class">Integrated\Bundle\ThemeBundle\Controller\ThemeController</parameter>

    </parameters>

    <services>

        <service id="integrated_theme.controller.theme" class="%integrated_theme.controller.theme.class%">
            <argument type="service" id="integrated_channel.config.manager" />
            <argument type="service" id="integrated_channel.adapter.registry" />
            <argument type="service" id="service_container" />
        </service>

    </services>

</container>